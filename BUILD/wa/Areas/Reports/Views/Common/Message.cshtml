@model CBHWA.Areas.Reports.Models.ReportMessage
@{
    //Layout = null;
    var className = "notify";
    if (Model.type == "warning") { 
        className += "-yellow";
    }
}
<div class="sep10"></div>
<div class="sep10"></div>
<div class="col-lg-offset-1 col-lg-10" style="background-color:#f5f5f5;">
    <div class="col-md-offset-3 col-md-6">
        <table cellspacing="0" cellpadding="0" border="0" width="100%">
            <tr>
                <td align="center" style="padding-top:10px;">
                    <a href=":;"><img class="img-responsive" width="300px" src="~/Images/CBH_LogoHeader.png" /></a>
                    <div class="sep5"></div>
                </td>
            </tr>
            <tr>
                <td align="center" bgcolor="#ffffff" id="content-body"><div class="@className"><h2>@Model.message</h2></div></td>
            </tr>
            <tr>
                <td align="center">
                    <div class="sep10"></div>
                    <div class="sep10"></div>
                    <p style="color:#004A9C;">Copyright © @DateTime.Now.Year CBH International</p>
                    <div class="sep5"></div>
                </td>
            </tr>
        </table>
    </div>
</div>
<script>
    $(window).ready(function () {
        $("#content-body").css({ 'height': ($(document).height() - ($(document).height() * 0.4).toFixed(0)) + 'px' });
    });

    $(window).resize(function () {
        $("#content-body").css({ 'height': ($(document).height() - ($(document).height() * 0.4).toFixed(0)) + 'px' });
    });
</script>
<style>
    .notify {
        background-color: #e3f7fc;
        color: #555;
        border: .1em solid;
        border-color: #8ed9f6;
        border-radius: 10px;
        font-family: Tahoma,Geneva,Arial,sans-serif;
        font-size: 1.1em;
        padding: 10px 10px 10px 10px;
        margin: 10px;
        cursor: default;
    }

    .notify-yellow {
        background: #fff8c4;
        border-color: #f7deae;
    }

    .notify-red {
        background: #ffecec;
        border-color: #fad9d7;
    }

    .notify-green {
        background: #e9ffd9;
        border-color: #D1FAB6;
    }
</style>